pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Harshit is Building the project...'
                sh '''
                    echo "Hello, Jenkins Pipeline!"
                    mkdir -p output
                    echo "This is a simple shell script." > output/result.txt
                    cat output/result.txt
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing the project...'
                
            }
        }
    }
}
