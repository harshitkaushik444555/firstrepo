pipeline {
    agent {
        docker {
            image 'openjdk:11'
        }
}
    stages {
        stage('Checkout Code') {
            steps {
                echo 'Cloning the repository...'
                checkout scm
            }
        }
        stage('Check Workspace') {
            steps {
                sh 'ls -l'
            }
        }
        stage('Compile Java Code') {
            steps {
                echo 'Compiling Java HelloWorld program...'
                sh 'javac $WORKSPACE/HelloWorld.java'
                sh 'java -cp $WORKSPACE HelloWorld'

            }
        }
        stage('Run Java Program') {
            steps {
                echo 'Running the Java program...'
                sh 'java HelloWorld'
            }
        }
    }
}

