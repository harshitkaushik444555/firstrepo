pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Define the image name
                    def imageName = "harshit-image"
                    
                    // Build the Docker image
                    sh "docker build -t ${imageName} ."
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker container
                    sh "docker run -d --name harshit-ka-container ${imageName}"
                }
            }
        }
    }

    post {
        always {
            // Clean up any resources, if needed
            echo 'Cleaning up...'
            sh "docker rm -f harshit-ka-container || true"
            sh "docker rmi harshit-image || true"
        }
    }
}
