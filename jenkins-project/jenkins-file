pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'make build'  // Running a shell command
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'make test'  // Running tests
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                sh 'make deploy'  // Deploy command
            }
        }
    }
}
