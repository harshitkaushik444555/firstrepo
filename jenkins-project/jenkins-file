pipeline {
    agent {
        docker {
            image 'openjdk:11'
        }
}
    stages {
        stage('Checkout Code') {
            steps {
                echo 'Cloning the repository...'
                checkout scm
            }
        }
        stage('Compile Java Code') {
            steps {
                echo 'Compiling Java HelloWorld program...'
                sh 'cd src/main/java'
                sh 'javac HelloWorld.java'

            }
        }
        stage('Run Java Program') {
            steps {
                echo 'Running the Java program...'
                sh 'java -cp src/main/java HelloWorld'
            }
        }
    }
}

