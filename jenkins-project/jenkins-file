pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'mkdir -p build && echo "Build successful" > build/status.txt'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing the project...'
                sh 'cat build/status.txt'
            }
        }
    }
}
